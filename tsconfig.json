{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true
    }
}